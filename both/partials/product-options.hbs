<div class="product-options small-12 medium-4 large-4 columns">
    <div itemprop="offers" itemscope="" itemtype="http://schema.org/Offer" class="prices">
        <h4 itemprop="price">${{product.skusInfo.[0].priceLists.[0].salePrice}}</h4>
        <p class="sale">was ${{product.skusInfo.[0].priceLists.[0].listPrice}}.00</p>
    </div>
    <p class="selected-swatch">
    Color: <span class="current-color" itemprop="color">{{defaultColor}}</span>
    </p>
    <div class="swatches">
        {{#each product.colors}}
        <img
        class="swatch-button {{#if @first}}selected{{/if}}"
        src="{{../swatchUrl}}{{id}}_swatch?$swatch$"
        data-color-code="{{colorCode}}"
        data-view-code="{{viewCode.[0]}}"
        data-color-name="{{displayName}}" />
        {{/each}}
    </div>
    <p class="select-size">Select a Size:</p>
    <div class="product-size clearfix">
        {{#each product.skusInfo}}
        <div class="sizes hidden" data-color-code={{colorId}} data-is-disabled="{{#unless stockLevel}}true{{/unless}}">
            <button {{#unless stockLevel}}disabled{{/unless}} data-product-size="{{size}}">{{size}}</button>
            {{#unless stockLevel}}<div class="out-of-stock hidden">Out of stock</div>{{/unless}}
            {{#when stockLevel 'eq' 1}}<div class="running-low hidden">Only {{stockLevel}} left!</div>{{/when}}
            {{#when stockLevel 'eq' 2}}<div class="running-low hidden">Only {{stockLevel}} left! </div>{{/when}}
            {{#between 3 stockLevel 5}}<div class="running-low hidden">Only a few left!</div>{{/between}}
        </div>
        {{/each}}
        
    </div>
</div>